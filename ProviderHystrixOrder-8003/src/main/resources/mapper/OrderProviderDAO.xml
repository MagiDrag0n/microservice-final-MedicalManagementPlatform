<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.OrderProviderDAO">

    <insert id="createOrder">
        INSERT INTO `order`(`id`,`patientid`,`bill`,`valid`,`time`) VALUES (#{id},#{patientid},#{bill},#{valid},#{time});
    </insert>

    <resultMap id="BaseOrderResultMap" type="com.entities.Order">
        <id column="id" property="id" jdbcType="BIGINT" />
        <id column="patientId" property="patientid" jdbcType="BIGINT"/>
        <id column="bill" property="bill" jdbcType="DECIMAL"/>
        <id column="valid" property="valid" jdbcType="TINYINT"/>
        <id column="time" property="time" jdbcType="DATE"/>
    </resultMap>
    <select id="getOrder" resultMap="BaseOrderResultMap">
        SELECT * FROM `order` WHERE `id`=#{id};
    </select>

    <delete id="deleteOrder">
        DELETE FROM `order` WHERE id = #{id};
    </delete>
</mapper>
